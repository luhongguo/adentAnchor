<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form'], function () {
        var form = layui.form;
        paging = layui.paging();
        initGrid(getWhere());
    });
    var userID = $.getQueryString("userID");
    function initGrid(where) {
        paging.init({
            url: '/System/UserAnchor/GetUserAnchorList',
            elem: '#content',
            tempElem: '#contentTpl',
            singleSelected: false, //单选
            params: {
                pageParm: { "where": JSON.stringify(where) },
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 10,//$(".layui-laypage-limits").find("option:selected").val()
            },
            success: function () {

            }
        });
    }

    function btn_add() {
        $.layerOpen({
            id: "add",
            title: "新增主播",
            width: "1200px",
            height: "800px",
            content: "/System/UserAnchor/AddUserAnchor?userID=" + userID,
            btn: null
        });
    }



    function btn_delete() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length < 1) {
            $.layerMsg("请勾选需要删除的角色。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您已选中" + ids.length + "条数据, 确定删除吗？",
            callback: function () {
                $.ajax({
                    url: '/System/UserAnchor/Delete',
                    data: { idList: ids.join(), "userID": userID },
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        //$.layerClose();
                        $.layerMsg(data.message, data.state);
                        initGrid();
                    },
                    error: function (xhr, status, error) {
                        $.layerMsg(error, "error");
                    }
                });
            }
        });
    }
    layui.use(['form'], function () {
        var form = layui.form;
        ////监听搜索
        form.on('submit(search)', function (data) {
            data.field
            initGrid(getWhere())
        });
    })
    function getWhere() {
        var Name = $("#Name").val();
        return { anchorUserName: Name, userID: userID}
    }
</script>
