        function reloadTable(field) {
            //执行重载
            table.reload('report', {
                page: {
                    curr: 1
                },
                where: {
                    "parm.where": JSON.stringify(field)
                }
            });
        }
        function getWhere() {
            var startTime = $("#startTimeReload").val();
            var endTime = $("#endTimeReload").val();
            var Name = $("#Name").val();
            return { "parm.where": JSON.stringify({ startTime: startTime, endTime: endTime, Name: Name }) };
        }
        renderTable(getWhere());

    });
